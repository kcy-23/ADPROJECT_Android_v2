<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mealImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mealtitle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Fried Chicken"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/mealImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mealtime"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="2022-2-14"
        app:layout_constraintLeft_toLeftOf="@id/mealtitle"
        app:layout_constraintTop_toBottomOf="@id/mealtitle" />

    <TextView
        android:id="@+id/mealscore"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="Score: 8/10"
        app:layout_constraintLeft_toLeftOf="@id/mealtime"
        app:layout_constraintTop_toBottomOf="@id/mealtime" />

</androidx.constraintlayout.widget.ConstraintLayout>
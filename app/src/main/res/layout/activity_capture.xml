<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaptureActivity">

    <TextView
        android:id="@+id/captureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture"
        android:textSize="40sp"
        android:textColor="@color/purple_700"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/addMealText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD MEALS"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/captureText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="22dp"/>

    <Button
        android:id="@+id/mealWithPhotoBtn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="MEAL WITH PHOTO"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addMealText"
        android:layout_marginTop="140dp"/>

    <Button
        android:id="@+id/systemRecommendBtn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="SYSTEM RECOMMEND"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mealWithPhotoBtn"
        android:layout_marginTop="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
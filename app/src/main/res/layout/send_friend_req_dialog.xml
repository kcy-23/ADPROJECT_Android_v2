<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/colorMyGray">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/confirmAddFriendTxt01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Friend Request?"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@id/confirmAddFriendTxt02"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/confirmAddFriendTxt02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To: User "
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@id/confirmAddBtn"
                app:layout_constraintTop_toTopOf="parent"
                />

            <Button
                android:id="@+id/confirmAddBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:backgroundTint="#71cd48"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/confirmAddFriendTxt02"
                app:layout_constraintBottom_toTopOf="@id/revertAddBtn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <Button
                android:id="@+id/revertAddBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="No"
                android:backgroundTint="#0066ff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/confirmAddBtn"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
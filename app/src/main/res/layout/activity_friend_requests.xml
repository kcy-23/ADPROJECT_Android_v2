<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FriendRequestsActivity">

    <TextView
        android:id="@+id/friendRequestsHeader"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Friend Requests"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"/>

    <LinearLayout
        android:id="@+id/friendRequestLL01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/friendRequestsHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/sentRequestsBtn"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:text="Sent Requests"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#999999"/>

        <Button
            android:id="@+id/receivedRequestsBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="Received Requests"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#999999"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/friendRequestLL02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/friendRequestLL01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/friendRequestListHeader"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="  Requests"
            android:textSize="17dp"
            android:gravity="center_vertical"
            android:background="#0066ff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <ListView
        android:id="@+id/requestsList"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/friendRequestLL02"
        android:dividerHeight="1dp"
        android:divider="#e5e5ff"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu"
        app:labelVisibilityMode="labeled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateAccountActivity">

    <TextView
        android:id="@+id/createAccHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/credentials"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/credentials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credentials"
        app:layout_constraintTop_toBottomOf="@id/createAccHeader"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/credentialsValidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Please correct errors before proceeding."
        android:textColor="#cc1f36"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/credentials"
        app:layout_constraintBottom_toTopOf="@id/createAccProfilePic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/createAccProfilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:background="@drawable/default_profile_picture"
        app:layout_constraintTop_toBottomOf="@id/credentials"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/uploadProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Select Profile Pic"
        android:textColor="#0066ff"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/createAccProfilePic"
        app:layout_constraintBottom_toTopOf="@id/createAccUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/createAccUsername"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createAccProfilePic"
        app:layout_constraintBottom_toTopOf="@id/createAccEmail"
        android:layout_marginTop="20dp"
        android:hint="Username"
        android:ems="10"/>

    <TextView
        android:id="@+id/usernameValidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Username is already taken"
        android:textColor="#cc1f36"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/createAccUsername"
        app:layout_constraintBottom_toTopOf="@id/createAccEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/createAccEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createAccUsername"
        app:layout_constraintBottom_toTopOf="@id/createAccPwd"
        android:layout_marginTop="20dp"
        android:hint="Email"
        android:ems="10"/>

    <TextView
        android:id="@+id/emailValidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Email address is already registered"
        android:textColor="#cc1f36"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/createAccEmail"
        app:layout_constraintBottom_toTopOf="@id/createAccPwd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/createAccPwd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createAccEmail"
        app:layout_constraintBottom_toTopOf="@id/createAccNextBtn"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:ems="10"/>

    <Button
        android:id="@+id/createAccNextBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#0066ff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/createAccPwd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Next"/>


</androidx.constraintlayout.widget.ConstraintLayout>